<fieldset class="p-form__fieldset p-3 my-3 border rounded">
  	<legend class="p-form__fieldset-legend">Current Members</legend>
	<span class="p-form__hint">Uncheck to include ex-Members</span>
	<div class="p-form__checkbox-group pt-3">
		<div class="p-form__checkbox-item">
			<input type="checkbox" name="filter_current_members" id="filter_current_members" value="true" checked />
			<label for="filter_current_members" class="p-form__checkbox-item-label">Current Members</label>
		</div>
	</div>
</fieldset>

<fieldset class="p-form__fieldset p-3 my-3 border rounded">
  	<legend class="p-form__fieldset-legend">Left in the last X days</legend>
	<span class="p-form__hint">Selecting this option only returns results when the 'Current Members' checkbox is unticked. It is not possible to filter by Members having left a given House.</span>
	<input type="number" id="filter_left_days" name="filter_left_days">
	<label for="filter_left_days">days</label>
</fieldset>

<fieldset class="p-form__fieldset p-3 my-3 border rounded">
  <legend class="p-form__fieldset-legend">Gender</legend>
  <div class="p-form__radio-group">
    <div class="p-form__radio-item">
      <input type="radio" name="filter_gender" id="gender-all" value="0" checked />
      <label for="gender-all" class="p-form__radio-item-label">All</label>
    </div>
    <div class="p-form__radio-item">
      <input type="radio" name="filter_gender" id="female" value="1" />
      <label for="female" class="p-form__radio-item-label">Female</label>
    </div>
    <div class="p-form__radio-item">
      <input type="radio" name="filter_gender" id="male" value="2" />
      <label for="male" class="p-form__radio-item-label">Male</label>
    </div>
  </div>
</fieldset>

<fieldset class="p-form__fieldset p-3 my-3 border rounded">
	<legend class="p-form__fieldset-legend">House</legend>
	<div class="p-form__radio-group">
		<div class="p-form__radio-item">
			<input type="radio" name="filter_house" id="house-both" value="0" checked />
			<label for="house-both" class="p-form__radio-item-label">House of Commons and House of Lords</label>
		</div>
		<div class="p-form__radio-item">
			<input type="radio" name="filter_house" id="house-commons" value="1" />
			<label for="house-commons" class="p-form__radio-item-label">House of Commons</label>
		</div>
		<div class="p-form__radio-item">
			<input type="radio" name="filter_house" id="house-lords" value="2" />
			<label for="house-lords" class="p-form__radio-item-label">House of Lords</label>
		</div>
	</div>
	
	<div class="p-form__checkbox-group pt-3">
		<div class="p-form__checkbox-item">
			<input type="checkbox" name="filter_previous_house_members" id="previous_house_members" value="true" />
			<label for="previous_house_members" class="p-form__checkbox-item-label">Include Members who were in this House but no longer are</label>
		</div>
	</div>
</fieldset>

